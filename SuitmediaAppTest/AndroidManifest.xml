        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.aldio.controller.AppController">
        <activity
            android:name="com.aldio.suitmediaapptest.Home"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aldio.suitmediaapptest.Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.aldio.suitmediaapptest.Event"
            android:label="@string/title_activity_event" >
        </activity>
        <activity
            android:name="com.aldio.suitmediaapptest.Guest"
            android:label="@string/title_activity_guest" >
        </activity>
    </application>

</manifest>